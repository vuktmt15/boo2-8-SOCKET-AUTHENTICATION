    <link rel="stylesheet" type="text/css" href="css/main.css" />
    <!--===============================================================================================-->
  </head>
  <body style="background-color: #666666">
    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
          <form
            class="login100-form validate-form"
            method="POST"
            action="/register"
          >
            <span class="login100-form-title p-b-43"> Sign Up </span>
            <% if(error && messageError[parseInt(error)]) { %>
            <div class="alert alert-danger" role="alert">
              <%=messageError[parseInt(error)] %>
            </div>
            <% } %> <% if(notification &&
            messageNotification[parseInt(notification)]) { %>
            <div class="alert alert-success" role="alert">
              <%=messageNotification[parseInt(notification)] %>
            </div>
            <% } %>
            <div
              class="wrap-input100 validate-input"
              data-validate="Name must to required and min length is at least 6 characters!"
            >
              <input class="input100 input-name" type="text" name="name" />
              <span class="focus-input100"></span>
              <span class="label-input100">Full name</span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Email must to required and valid!"
            >
              <input class="input100 input-email" type="text" name="email" />
              <span class="focus-input100"></span>
              <span class="label-input100">Email</span>
            </div>

            <div class="wrap-input100 validate-input">
              <input class="input100" type="text" name="avatar" />
              <span class="focus-input100"></span>
              <span class="label-input100">Link avatar</span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Password must to required and min length is at least 6 characters!"
            >
              <input
                class="input100 input-password"
                type="password"
                name="password"
              />
              <span class="focus-input100"></span>
              <span class="label-input100">Password</span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Confirm password must be same password!"
            >
              <input
                class="input100 input-confirm-password"
                type="password"
                name="confirm-password"
              />
              <span class="focus-input100"></span>
              <span class="label-input100">Confirm sassword</span>
            </div>

            <div class="flex-sb-m w-full p-t-3 p-b-32">
              <div class="contact100-form-checkbox">
                <label class="label" for="ckb1">
                  <a href="/login" class="txt1"> Login >> </a>
                </label>
              </div>
            </div>

            <div class="container-login100-form-btn">
              <button class="login100-form-btn">Register</button>
            </div>

            <div class="text-center p-t-46 p-b-20">
              <span class="txt2"> or login with </span>
            </div>

            <div class="login100-form-social flex-c-m">
              <a href="#" class="login100-form-social-item flex-c-m bg1 m-r-5">
                <i class="fa fa-facebook-f" aria-hidden="true"></i>
              </a>
            </div>
          </form>

          <div
            class="login100-more"
            style="background-image: url('images/bg-01.jpg')"
          ></div>
        </div>
      </div>
    </div>

    <!--===============================================================================================-->
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/daterangepicker/moment.min.js"></script>
    <script src="vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="js/validate.js"></script>
  </body>
</html>
